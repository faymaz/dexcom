<schemalist>
    <schema id="org.gnome.shell.extensions.dexcom" path="/org/gnome/shell/extensions/dexcom/">
        <!-- Credentials -->
        <key name="username" type="s">
            <default>""</default>
            <summary>Dexcom Username</summary>
            <description>Dexcom Share account username</description>
        </key>
        <key name="password" type="s">
            <default>""</default>
            <summary>Dexcom Password</summary>
            <description>Dexcom Share account password</description>
        </key>
        <key name="region" type="s">
            <default>"OUS"</default>
            <summary>Dexcom Region</summary>
            <description>Dexcom Share server region (US or Non-US)</description>
        </key>

        <!-- Units and Update Settings -->
        <key name="unit" type="s">
            <default>"mg/dL"</default>
            <summary>Glucose Unit</summary>
            <description>Glucose unit (mg/dL or mmol/L)</description>
        </key>
        <key name="update-interval" type="i">
            <default>60</default>
            <summary>Update Interval</summary>
            <description>How often to update the glucose value (in seconds)</description>
        </key>

        <!-- Thresholds -->
        <key name="urgent-high-threshold" type="i">
            <default>240</default>
            <summary>Urgent High Threshold</summary>
            <description>Threshold for urgent high glucose warning (in mg/dL)</description>
        </key>
        <key name="high-threshold" type="i">
            <default>180</default>
            <summary>High Threshold</summary>
            <description>Threshold for high glucose warning (in mg/dL)</description>
        </key>
        <key name="low-threshold" type="i">
            <default>90</default>
            <summary>Low Threshold</summary>
            <description>Threshold for low glucose warning (in mg/dL)</description>
        </key>
        <key name="urgent-low-threshold" type="i">
            <default>70</default>
            <summary>Urgent Low Threshold</summary>
            <description>Threshold for urgent low glucose warning (in mg/dL)</description>
        </key>

        <!-- Display Settings -->
        <key name="show-delta" type="b">
            <default>true</default>
            <summary>Show Delta</summary>
            <description>Show glucose value change</description>
        </key>
        <key name="show-trend-arrows" type="b">
            <default>true</default>
            <summary>Show Trend Arrows</summary>
            <description>Show glucose trend direction arrows</description>
        </key>
        <key name="show-elapsed-time" type="b">
            <default>true</default>
            <summary>Show Elapsed Time</summary>
            <description>Show time since last reading</description>
        </key>
        <key name="show-icon" type="b">
            <default>true</default>
            <summary>Show Icon</summary>
            <description>Show or hide the Dexcom icon in the panel</description>
        </key>
        <key name="icon-position" type="s">
            <default>"left"</default>
            <summary>Icon Position</summary>
            <description>Position of the icon relative to the text (left or right)</description>
        </key>

        <!-- Colors -->
        <key name="urgent-high-color" type="s">
            <default>"#FF0000"</default>
            <summary>Urgent High Color</summary>
            <description>Color for urgent high glucose values</description>
        </key>
        <key name="high-color" type="s">
            <default>"#FFA500"</default>
            <summary>High Color</summary>
            <description>Color for high glucose values</description>
        </key>
        <key name="normal-color" type="s">
            <default>"#00FF00"</default>
            <summary>Normal Color</summary>
            <description>Color for normal glucose values</description>
        </key>
        <key name="low-color" type="s">
            <default>"#FFA500"</default>
            <summary>Low Color</summary>
            <description>Color for low glucose values</description>
        </key>
        <key name="urgent-low-color" type="s">
            <default>"#FF0000"</default>
            <summary>Urgent Low Color</summary>
            <description>Color for urgent low glucose values</description>
        </key>
    </schema>
</schemalist>